<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <p><label for="pet[name]">Name:</label>
  <input type="text" name="pet[name]" id="pet_name"></p>
  <p> Select an owner:</p>
  <%Owner.all.each do |owner|%>
    <input type="radio" name="pet[owner_id]" id="<%= owner.name %>" value="<%=owner.id%>"> <%=owner.name%>
  <%end%>
  <br>
  <p>Create a new owner for this pet:</p>
  <p><label for="owner[name]">Name:</label>
  <input  type="text" name="owner[name]" id="owner_name"></p>
  <input type="submit" value="Create Pet">
</form>